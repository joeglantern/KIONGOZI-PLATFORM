{
  "expo": {
    "name": "Kiongozi Chat",
    "slug": "kiongozi-mobile-working",
    "version": "1.0.0",
    "description": "AI-powered learning for Kenya's Green Economy & Digital Transformation",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "kiongozi",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kiongozi.mobile",
      "buildNumber": "3",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for voice input functionality.",
        "NSSpeechRecognitionUsageDescription": "This app needs access to speech recognition to convert your voice to text.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "156.67.25.84": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            }
          }
        }
      }
    },
    "android": {
      "package": "com.kiongozi.mobile",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO",
        "INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "useAndroidX": true,
            "enableJetifier": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "enableMinifyInReleaseBuilds": true
          }
        }
      ]
    ],
    "owner": "afosi",
    "extra": {
      "eas": {
        "projectId": "740d5736-9f10-4329-b2f5-0ffbb99d5d46"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/d41fa2af-cdf7-4c6f-8070-ade8221f15eb"
    }
  }
}